
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write to the storage bucket.
    // In a production app, you would want to restrict this further.
    // For example, only allow users to write to their own folder.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
